<div class="row">
	<div class="col col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading"><h3 class="panel-title">供应商管理 <span style="float:right;position:relative;" href="javascript:void(0)" ><font id="col-trigger">显/隐字段</font>
						<div  class="dropdown-menu" id="col-show-hide">
							<ul>
								<li>
									<input type="checkbox" id="one" checked>
									<label>供应商编码</label>
								</li>
								<li>
									<input type="checkbox" id="two" checked>
									<label>简称</label>
								</li>
								<li>
									<input type="checkbox" id="three" checked>
									<label>名字</label>
								</li>
								<li>
									<input type="checkbox" id="four" checked>
									<label>联系人</label>
								</li>
								<li>
									<input type="checkbox" id="five" checked>
									<label>邮箱</label>
								</li>
								<li>
									<input type="checkbox" id="six" checked>
									<label>注册资金</label>
								</li>
								<li>
									<input type="checkbox" id="seven" checked>
									<label>付款方式</label>
								</li>
								 	<li>
									<input type="checkbox" id="eight" checked>
									<label>产品类别</label>
								</li>
								<li>
									<input type="checkbox" id="nine" checked>
									<label>创建时间</label>
								</li>
								<li>
									<input type="checkbox" id="ten" checked>
									<label>最后更新</label>
								</li>
						
							</ul>
						</div> </span></h3>
				
				
				
			</div>
			
			<div class="panel-body">
				<input type="search" class="form-control" ng-model="search" placeholder="Search">
				<table class="table table-condensed table-hover">
					<thead>
						<tr>
							<th><a href="#/purchase/vendor/edit/new"><i class="glyphicon glyphicon-plus"></i></a></th>
							<th name="one">供应商编码</th>
							<th name="two">简称</th>
							<th name="three">名字</th>
							<th name="four">联系人</th>
							<th name="five">邮箱</th>
							<th name="six">注册资金</th>
							<th name="seven">付款方式</th>
							<th name="eight">产品类别</th>
							<th name="nine">创建时间</th>
							<th name="ten">最后更新</th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="vendor in vendors | filter: search | limitTo: 20">
							<td>
								<a href="#/purchase/vendor/edit/{{vendor.id}}"><i class="glyphicon glyphicon-pencil"></i></a>
							</td>
							<td name="one">{{vendor.code}}</td>
							<td name="two">{{vendor.abbreviation}}</td>
							<td name="three">{{vendor.name}}</td>
							<td name="four">{{vendor.contact}}</td>
							<td name="five">{{vendor.email}}</td>
							<td name="six">{{vendor.registered_capital}}</td>
							<td name="seven">{{vendor.payment_period}}</td>
							<td name="eight">{{vendor.categorys_id}}</td>
							<td name="nine">{{vendor.created_at}}</td>
							<td name="ten">{{vendor.updated_at}}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<style>
  font#col-trigger{
   	    cursor: pointer;
   }
	div#col-show-hide {
		position: absolute;
		display: none;
	}
	table th{
		font-size:12px;
		color:#1A93EF;
		font-weight:normal;
		text-align:left;
	}
	div#col-show-hide ul li {
		list-style-type: none;
		text-align: left;
		padding-left: 20px;
	}
	div#col-show-hide ul {
		padding-left: 0px;
	}
	div#col-show-hide ul li label {
		margin-left: 5px;
		font-weight: normal;
		color: #1A93EF;
		font-size: 12px;
		
	}

</style>
<script>
	(function($){


$("#col-trigger").toggle(

function () {
$("#col-show-hide").fadeIn("fast");
},
function () {
$("#col-show-hide").fadeOut("fast");
}
)
$(document).bind("click",function(e){
		var target  = $(e.target);
		if(target.closest("#col-show-hide").length == 0){
			$("#col-show-hide").hide();
		}
	})	
})(jQuery);
</script>
