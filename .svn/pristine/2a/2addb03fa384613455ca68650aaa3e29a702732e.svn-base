<div class="container-fluid">
	<div class="row">
		<div class="col col-lg-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">允许被合并的采购单</h3>
				</div>
				
				<div class="panel-body">
					<div class="container-fluid">
						<table class="table table-condensed table-hover">
							<thead>
								<tr>
									<th>
										<lable>全选</label>
										<input name="checkAll" type="checkbox" />
										<lable>全不选</label>
										<input name="notCheckAll" type="checkbox" />
									</th>
									<th>
										采购单号
									</th>
								</tr>
							</thead>
							<tbody>
								<tr ng-repeat="order in orders">
									<td><input type="checkbox" /></td>
									<td>{{order.invoice}}</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				<div class="panel-footer">
					<button class="btn btn-primary">合并所选项</button>
				</div>
			</div>
		</div>
		<div class="col col-lg-8">
			<div class="panel panel-warning">
				<div class="panel-heading">
					<h3 class="panel-title">合并操作<button class="btn btn-default btn-xs pull-right">放弃操作</button></h3>
				</div>
				<div class="panel-body">
					
				</div>
				<div class="panel-footer">
					<button class="btn btn-primary">确认合并</button>
				</div>
			</div>
		</div>
	</div>
</div>